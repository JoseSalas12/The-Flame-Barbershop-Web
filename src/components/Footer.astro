---

import SocialLinks from '../components/SocialLinks.astro';

const navMenu = [
    {
        url: '#sobreNosotros',
        name: 'Sobre Nosotros',
    },
    {
        url: '#servicios',
        name: 'Servicios',
    },
    {
        url: '#galeria',
        name: 'galeria',
    },
    {
        url: '#contacto',
        name: 'contacto',
    },
];

---

<footer>
    <div class="footer_content">
        <div class="footer_content-top">
            <div class="footer_content-logo">
                <a href="#">The Flame <span>Barbershop</span></a>
            </div>
            <nav class="footer_content-navbar">
                <ul>
                    {
                       navMenu.map(link =>(
                            <li><a href={link.url}>{link.name}</a></li>
                        ))
                    }
                </ul>
            </nav>
            
        </div>
        <div class="footer_content-bottom">
            <div class="politicies">
                <a href="#">Politicas de privacidad</a>
                <a href="https://www.linkedin.com/in/jose-enrrique-salas-valera-94021a230/" target="_blank">Desarrollador por <span>Jose Salas</span></a>
            </div>
            <SocialLinks ubicacion="footer"/>
        </div>
    </div>

</footer>

<style>
     @media screen and (min-width:0px){
        
        footer{width: 100%; background: var(--negro);}
        .footer_content{width: min(95%, 132.4rem); display: flex; flex-direction: column; row-gap: 3.2rem; margin: 0rem auto; padding: 7.2rem 0rem 6.7rem;}
        .footer_content .footer_content-top{display: flex; flex-direction: column; justify-content: center; align-items: center; row-gap: 2.5rem;}
        .footer_content .footer_content-top .footer_content-logo a{font-family: var(--fuente-secundaria); font-size: 2.6rem; line-height: normal; letter-spacing: 0rem; color: var(--blanco-hueso);}
        .footer_content .footer_content-top .footer_content-logo a span{color: var(--naranja);}
    
        .footer_content .footer_content-top .footer_content-navbar ul{display: flex; flex-direction: column; justify-content: center; align-items: center; row-gap: 2.5rem;}
        .footer_content .footer_content-top .footer_content-navbar ul li{display: flex;}
        .footer_content .footer_content-top .footer_content-navbar ul li a{font-family: var(--fuente-principal); font-size: 1.6rem; font-weight: 600; color: var(--blanco-hueso);}
        .footer_content .footer_content-top .footer_content-navbar ul li:last-child a{padding: .9rem 2.55rem; border-radius: 3rem; color: var(--blanco-hueso);  background: var(--naranja);}
        .footer_content .footer_content-bottom{display: flex; flex-direction: column; justify-content: center; align-items: center; row-gap: 2.5rem;}
        .footer_content .footer_content-bottom .politicies{width: 100%; display: flex; justify-content: center; align-items: center; }
        .footer_content .footer_content-bottom .politicies a{width: 50%; font-family: var(--fuente-principal); font-size: 1.6rem; font-weight: 500; color: var(--blanco-hueso); text-align: center; text-wrap: pretty;}
        .footer_content .footer_content-bottom .politicies a span{color: var(--naranja);}

    }
    @media screen and (min-width: 768px){
        
    }

    @media screen and (min-width: 1024px){
        .footer_content .footer_content-top{display: flex; flex-direction: row; justify-content: space-between;}
        .footer_content .footer_content-top .footer_content-logo a{font-size: 3.6rem;}
        .footer_content .footer_content-top .footer_content-navbar ul{flex-direction: row; column-gap: 4rem;}
        .footer_content .footer_content-top .footer_content-navbar ul li{display: block;}
        .footer_content .footer_content-top .footer_content-navbar ul li a{font-size: 2rem;}
        .footer_content .footer_content-bottom{flex-direction: row; justify-content: space-between;}
        .footer_content .footer_content-bottom .politicies{width: auto; justify-content: start; column-gap: 3rem;}
        .footer_content .footer_content-bottom .politicies a{width: auto; text-align: start;}





    }
</style>