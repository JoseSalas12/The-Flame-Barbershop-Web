---
import Swiper from "../components/Swiper.astro"

const gallery = [
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-1.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-2.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-3.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-4.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-5.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-1.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-2.webp"
    },
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-3.webp"
    }
    ,
    {
        alt: "Cliente de The Flame Barbershop con corte de cabello",
        image: "/public/images/img-gallery-4.webp"
    }
    

]

---
<section id="gallery">
    <div class="gallery_content"> 
        <div class="gallery_top"> 
            <h2 class="color_orange">Galería</h2>
            <p>Descubre nuestros estilos únicos y la experiencia que ofrecemos a cada cliente.</p>

        </div>
        <div class="gallery_bottom"> 
            <div class="swiper_container">
                <div class="swiper_top">
                    <Swiper loop={false} navigation={false} pagination={false} breakpoints={{375: { slidesPerView: 1, spaceBetween: 1 }}} thumbs=".gallery_photo" effect="fade" >
                        {gallery.map((item) => (
                            <div class="swiper-slide">
                                <img src={item.image} alt={item.alt} loading="lazy" decoding="async"/>
                            </div>
                        ))}
                    </Swiper>
                </div>
                <div class="swiper_bottom">
                    <Swiper loop={false} navigation={false} pagination={true} breakpoints={{375: { slidesPerView: 3, spaceBetween: 1 }, 768: {slidesPerView: 6, spaceBetween: 1}, 1024: {slidesPerView: 8, spaceBetween: 1}}}  className="gallery_photo" >
                        {gallery.map((item) => (
                            <div class="swiper-slide">
                                <img src={item.image} alt={item.alt} loading="lazy" decoding="async"/>
                            </div>
                        ))}
                    </Swiper>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @media screen and (min-width:0px){
        
        #gallery{width: 100%; padding: 6rem 0rem; background: var(--gris-oscuro);}
        #gallery .gallery_content{width: min(85%, 131rem); margin: 0rem auto;}
        #gallery .gallery_content .gallery_top{display: flex; flex-wrap: wrap; justify-content: center; align-items: center;}
        #gallery .gallery_content .gallery_top h2{font-family: var(--fuente-principal); font-size: 3.2rem; font-weight: 900; line-height: normal; text-transform: uppercase;}
        #gallery .gallery_content .gallery_top p{padding-top: 1.2rem; font-family: var(--fuente-principal); font-size: 1.6rem; font-weight: 600; line-height: normal; color: var(--blanco-hueso); text-align: center; text-wrap: pretty;}
        #gallery .gallery_content .gallery_bottom{display: flex; flex-direction: column; padding-top: 5.1rem;}
        #gallery .gallery_content .gallery_bottom .swiper_container{width: 100%;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top{position: relative; display: flex;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top::before{content: ''; width: 23.9rem; height: 49rem; position: absolute; top: 0rem; left: 50.08%; transform: translateX(-50.08%); background: url(images/img-iphone-gallery.webp) no-repeat top/100%;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top .swiper-slide{display: flex; justify-content: center; align-items: center;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top .swiper-slide img{width: 100%; height: 36.8rem; max-width: 20.4rem; padding: 5.597rem 0rem; object-fit: cover; object-position: 42% 50%;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom{padding-top: 1.6rem;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom .swiper-slide{display: flex !important; justify-content: center; align-items: center;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom .swiper-slide img{display: flex; height: 12rem; object-fit: cover; border-radius: 1.5rem; opacity: .5;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom .swiper-slide-thumb-active img{opacity: 1;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom swiper-container::part(bullet){width: 1.2rem; height: 1.2rem; background: var(--naranja); border-radius: 50%; opacity: .5;}
    }

    @media screen and (min-width:768px){
        #gallery .gallery_content{width: min(95%, 131rem);}
        #gallery{padding: 8.5rem 0rem;}
        #gallery .gallery_content .gallery_top{width: min(95%, 122.3rem); justify-content: space-between; margin: 0rem auto;}
        #gallery .gallery_content .gallery_top h2{font-size: 4.8rem;}
        #gallery .gallery_content .gallery_top p{text-align: start; max-width: 46.7rem;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top .swiper-slide img{height: 44.8rem; max-width: 58.4rem; padding: 2.597rem 0rem;  object-position: 100% 20%;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_top::before{content: ''; width: 69.916rem; height: 50rem; position: absolute; top: 0rem; left: 50.08%; transform: translateX(-50.08%); background: url(images/img-ipad-gallery.webp) no-repeat top/100%;}
        #gallery .gallery_content .gallery_bottom .swiper_container .swiper_bottom{padding-top: 7.6rem;}

    }
    
</style>